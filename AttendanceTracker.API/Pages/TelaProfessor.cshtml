@page
@model TelaProfessorModel
@{
    ViewData["Title"] = "Registrar Aluno";
}

<link rel="stylesheet" href="~/css/telaProfessor.css" />

<div class="register">
    <h2>Registrar Aluno</h2>

    <form method="post">
        @Html.AntiForgeryToken()
        <div>
            <label for="Nome">Nome:</label>
            <input type="text" id="Nome" name="Nome" value="@Model.Nome" required />
        </div>

        <div>
            <label for="Matricula">Matrícula:</label>
            <input type="text" id="Matricula" name="Matricula" value="@Model.Matricula" required />
        </div>

        <div>
            <button type="submit">Gerar QR Code</button>
        </div>
    </form>
</div>

@if (!string.IsNullOrEmpty(Model.QrCodeBase64))
{
    <div style="display: flex; flex-direction: column; align-items: center;" class="qr-preview">
        <h3 style="font-size: 50px;">Prévia do QR Code</h3>
        <img src="data:image/png;base64,@Model.QrCodeBase64" alt="QR Code do Aluno" />
        <p>nome: <strong>@Model.Nome</strong> — Matrícula: <strong>@Model.Matricula</strong></p>
        <button disabled style="border: none; background: #ff0000; color: white; border-radius: 4px; padding: 10px;">Enviar ao Banco (futuro)</button>
    </div>
}