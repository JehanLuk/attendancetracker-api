@page
@model PageModel
@{
    ViewData["Title"] = "Login Aluno";
}
<main>
    <div class="login-container" style="max-width:400px;margin:auto;padding:2rem;border:1px solid #ccc;border-radius:8px;">
        <h2>Login Aluno</h2>
        <form method="post">
            <div class="form-group" style="margin-bottom:1rem;">
                <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" class="form-control" required style="width:100%;padding:0.5rem;">
            </div>
            <div class="form-group" style="margin-bottom:1rem;">
                <label for="curso">Curso</label>
                <input type="text" id="curso" name="curso" class="form-control" required style="width:100%;padding:0.5rem;">
            </div>
            <div class="form-group" style="margin-bottom:1rem;">
                <label for="disciplina">Disciplina</label>
                <input type="text" id="disciplina" name="disciplina" class="form-control" required style="width:100%;padding:0.5rem;">
            </div>
            <div class="form-group" style="margin-bottom:1rem;">
                <label for="autorizacao">Autorização</label>
                <input type="text" id="autorizacao" name="autorizacao" class="form-control" required style="width:100%;padding:0.5rem;">
            </div>
            <button type="submit" class="btn btn-primary" style="width:100%;padding:0.75rem;">Entrar</button>
        </form>
        <div style="margin-top:1rem;text-align:center;">
            <a href="/SolicitarAutorizacao">Solicitar autorização</a>
        </div>
    </div>
</main>